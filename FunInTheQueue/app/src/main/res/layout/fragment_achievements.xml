<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#FFA46D">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/backgroundProfile"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentBottom="true"
            android:src = "@drawable/profielbackground"
            android:scaleType="fitEnd" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/arrowBack"
            android:layout_marginTop="42dp"
            android:src="@drawable/arrowback"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:onClick="goToProfile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mijn prestaties"
            android:id="@+id/textView11"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_toRightOf="@+id/arrowBack"
            android:layout_toEndOf="@+id/arrowBack"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/arrowBack"
            android:layout_alignBottom="@+id/arrowBack"
            android:paddingBottom="0dp"
            android:paddingTop="4dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="460dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="320dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/imgAchievement"
                    android:src="@drawable/attractiefoto"
                    android:layout_marginLeft="-5dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Doorzetter"
                        fontPath="fonts/GOTHAM-MEDIUM.OTF"
                        android:id="@+id/txtAchievementTitel"
                        android:layout_weight="0.5"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:paddingTop="5dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Sta meer dan een uur aan een stuk in de rij."
                        android:id="@+id/txtAchievementText"
                        android:layout_weight="0.5"
                        android:textColor="#000000"
                        android:textSize="13dp"
                        android:layout_marginRight="10dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>