<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/imgSwipeCircle1"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/viewpagecirclefull"
        android:layout_marginBottom="95dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="168dp" />

    <ImageButton
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/imgSwipeCircle2"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/viewpagecircleempty"
        android:layout_alignTop="@+id/imgSwipeCircle1"
        android:layout_toRightOf="@+id/imgSwipeCircle1"
        android:layout_toEndOf="@+id/imgSwipeCircle1"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="95dp" />
</RelativeLayout>