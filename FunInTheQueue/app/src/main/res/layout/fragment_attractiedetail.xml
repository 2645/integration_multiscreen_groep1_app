<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background ="#80BCAB">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/backgroundQueue"
            android:scaleType="fitEnd"
            android:layout_alignParentBottom="true"
            android:src = "@drawable/queuebackground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/txtAttractieNaam"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />


        <be.ehb.funinthequeue.ImageClipBig
            android:layout_marginTop="58dp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/imageView16"
            android:background="@drawable/attractiedetailfoto"
            android:scaleType="centerCrop"
            android:layout_gravity="center"

            android:layout_below="@+id/imageView19"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/imageView16"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:id="@+id/linearLayout3">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:id="@+id/imageView17"
                android:src="@drawable/queuewit"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textView"
                android:textColor="#ffffff"
                android:textSize="21dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:id="@+id/imageView18"
                android:padding="10dp"
                android:src="@drawable/placemarkerwit"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="53 m"
                android:id="@+id/textView6"
                android:textColor="#ffffff"
                android:textSize="21dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textView8"
            android:layout_below="@+id/linearLayout3"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:layout_marginRight="55dp"
            android:layout_marginLeft="55dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView19"
            android:layout_alignTop="@+id/txtAttractieNaam"
            android:layout_toLeftOf="@+id/txtAttractieNaam"
            android:layout_toStartOf="@+id/txtAttractieNaam"
            android:src="@drawable/arrowback"
            android:layout_marginRight="10dp"
            android:paddingBottom="12dp"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:layout_marginTop="-5dp"
            android:onClick="backButtonAttractie" />

    </RelativeLayout>

</LinearLayout>