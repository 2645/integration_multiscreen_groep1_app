<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AL EEN PROFIEL?"
            android:layout_gravity="center_horizontal"
            android:id="@+id/txtAanmelden"
            android:textColor="#ffffff"
            android:textSize="27dp" />

        <Button
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:text="Aanmelden"
            android:id="@+id/button4"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonbackground"
            android:textColor="#E5403C"
            android:onClick="goToAanmelden" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEN JE NIEUW HIER?"
            android:id="@+id/textView12"
            android:textColor="#ffffff"
            android:textSize="27dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:text="Profiel aanmaken"
            android:id="@+id/button5"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonbackground"
            android:textColor="#E5403C"
            android:layout_gravity="center"
            android:onClick="goToRegistreren" />
    </LinearLayout>

</RelativeLayout>