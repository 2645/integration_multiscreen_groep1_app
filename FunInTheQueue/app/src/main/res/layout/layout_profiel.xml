<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#FFA46D">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/backgroundProfile"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentBottom="true"
            android:src = "@drawable/profielbackground"
            android:scaleType="fitEnd" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:id="@+id/imgAvatar"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:src="@drawable/plop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dieter Holvoet"
            android:id="@+id/txtNaam"
            android:layout_below="@+id/imgAvatar"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:layout_marginTop="-5dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageView9"
            android:src="@drawable/cocacoin"
            android:layout_below="@+id/txtNaam"
            android:layout_alignLeft="@+id/imgAvatar"
            android:layout_alignStart="@+id/txtNaam"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500 cocacoins"
            android:id="@+id/txtAantalCocaCoins"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:layout_alignBottom="@+id/imageView9"
            android:layout_toRightOf="@+id/imageView9"
            android:layout_toEndOf="@+id/imageView9"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView9"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:onClick="goToFriends"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView10"
                    android:src="@drawable/vrienden"
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Vrienden"
                    android:id="@+id/textView2"
                    android:textColor="#ffffff"
                    android:textSize="17dp"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="15dp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:onClick="goToAchievements"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView11"
                    android:src="@drawable/achievements"
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Achievements"
                    android:id="@+id/textView3"
                    android:textColor="#ffffff"
                    android:textSize="17dp"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="15dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:onClick="goToAvatars"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView12"
                    android:src="@drawable/avatars"
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Avatars"
                    android:id="@+id/textView4"
                    android:textColor="#ffffff"
                    android:textSize="17dp"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="15dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:onClick="goToSettings"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView13"
                    android:src="@drawable/gegevens"
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Gegevens aanpassen"
                    android:id="@+id/textView5"
                    android:textColor="#ffffff"
                    android:textSize="17dp"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="15dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>